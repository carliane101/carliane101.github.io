name: Update CNAME



on:

  push:

    branches:

      - gh-pages

  workflow_run:

    workflows: ["pages-build-deployment"]

    types:

      - completed



jobs:

  update-cname:

    runs-on: ubuntu-latest

    steps:

      - name: Clone, Echo, and Push Changes

        env:

          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

        run: |

          REPO="${{ github.repository }}"

          BRANCH="gh-pages"

          CNAME_VALUE="seajayenv.com"  # <-- replace this with your actual domain or make it an input

          

          git clone --depth 1 --branch "$BRANCH" "https://x-access-token:${GITHUB_TOKEN}@github.com/${REPO}.git"

          cd "$(basename "$REPO")"

          

          echo "$CNAME_VALUE" > CNAME

          

          git config --local user.email "${{ github.actor }}@users.noreply.github.com"

          git config --local user.name "${{ github.actor }}"

          

          git add CNAME

          git commit -m "Update CNAME file" || echo "No changes to commit"

          git push

